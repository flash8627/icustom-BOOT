<?xml version="1.0" encoding="UTF-8"?>

<ehcache id="security.ehcache">
	
	<diskStore path="java.io.tmpdir" />

	<defaultCache maxElementsInMemory="1000" eternal="false"
		timeToIdleSeconds="3600" timeToLiveSeconds="3600" overflowToDisk="false">
	</defaultCache>

	<!-- spring security -->
	<cache name="userCache" maxElementsInMemory="100" eternal="false"
		timeToIdleSeconds="600" timeToLiveSeconds="3600" overflowToDisk="true" />

</ehcache>
